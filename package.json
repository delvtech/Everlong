{
  "name": "everlong",
  "type": "module",
  "scripts": {
    "build": "forge build --force --sizes --skip test",
    "format": "prettier -w **/*.sol",
    "test": "forge test --force"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "hardhat": "^2.22.6",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-solidity"
    ],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "parser": "solidity-parse",
          "printWidth": 80,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": true
        }
      }
    ]
  }
}
